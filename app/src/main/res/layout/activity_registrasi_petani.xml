<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".RegistrasiPetani">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/coklatmaskot"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/ajakan"
            android:layout_below="@id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda petani?\nYuk Gabung bersama kami"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_below="@id/ajakan"
            android:id="@+id/titlenamausaha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Masukan nama usaha (Opsional)"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/emaillogin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/titlenamausaha"
            android:background="@drawable/edit_text_bottom_border2"
            android:ems="10"
            android:hint="Nama Usaha"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:layout_below="@id/emaillogin"
            android:id="@+id/titledeskripsitoko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Masukan deskripsi usaha (Opsional)"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/passwordlogin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/titledeskripsitoko"
            android:background="@drawable/edit_text_bottom_border2"
            android:ems="10"
            android:hint="Deskripsi Usaha"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />

        <Button
            android:id="@+id/selanjutnya"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/passwordlogin"
            android:layout_marginTop="30dp"
            android:background="@drawable/button3"
            android:textAllCaps="false"
            android:text="Selanjutnya"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

    </RelativeLayout>
</RelativeLayout>