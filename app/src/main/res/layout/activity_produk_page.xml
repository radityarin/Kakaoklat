<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".produkPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/coklatsusu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/layout_bg"
            android:padding="20dp">

            <TextView
                android:id="@+id/namaproduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Susu Coklat\nEnak Banget"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hargaproduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaproduk"
                android:layout_marginTop="30dp"
                android:text="Rp 2000000"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/hargaproduk"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button3"
                android:text="Beli"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Informasi Produk"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/informasiproduk"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="170dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_bg"
            android:layout_height="200dp">

            <ScrollView
                android:layout_width="match_parent"

                android:layout_height="100dp">

            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>