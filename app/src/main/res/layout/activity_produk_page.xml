<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".produkPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gambarproduk"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitCenter"
            android:src="@drawable/coklatsusu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/layout_bg"
            android:padding="20dp">

            <TextView
                android:id="@+id/namaproduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Susu Coklat\nEnak Banget"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hargaproduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaproduk"
                android:layout_marginTop="20dp"
                android:text="Rp 2000000"
                android:textColor="@android:color/holo_orange_dark"
                android:textAlignment="center"
                android:textSize="30dp" />

            <Button
                android:id="@+id/beli"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/hargaproduk"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button3"
                android:text="Beli"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Informasi Produk"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/informasiproduk"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="170dp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/layout_bg"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/produklainnya"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Produk Lainnya"/>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/produklainnya"
                android:id="@+id/produklainnyarecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>