<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardproduk"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/layout_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/urlgambarproduk"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/coklatbatang"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="10dp">
            
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/judulproduk"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:text="Coklat Batang Asli Malang enak banget mantap woi"
                android:textStyle="bold"/>
            <TextView
                android:paddingHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/judulproduk"
                android:id="@+id/hargaproduk"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:text="Rp 76.000"/>
            <TextView
                android:layout_below="@+id/hargaproduk"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="10dp"
                android:id="@+id/kategoriproduk"
                android:layout_width="match_parent"
                android:text="Batang"
                android:layout_height="20dp" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>